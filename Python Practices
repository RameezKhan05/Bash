Main function logic

#! /usr/bin/python

def getInt():
	num = int(input("Enter a number : "))
	return num

def Main():
	print("Main Function Started")
	output = getInt()
	print("User entered : ", output)

#if __name__ == "__main__":
#	Main()

Main()

######################################################################################################
Swapping in List

#! /usr/bin/python2

orgList = [1, 2, 3, 4, 5, 6]

print ("Current List: " )
print (orgList)
x = input("Enter 1st position : ")
y = input("Enter 2nd position : ")
def newList(orgList):
#	size = len(orgList)
	temp = orgList [x - 1]
	orgList [x - 1] = orgList [y - 1]
	orgList [y - 1] = temp
	return orgList

print (newList(orgList))

